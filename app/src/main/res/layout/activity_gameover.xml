<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Hintergrundbild -->
    <ImageView
        android:id="@+id/hintergrund"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hintergrund_neu"
        android:scaleType="centerCrop" />

    <!-- Game Over Text -->

    <!-- LinearLayout f端r die Buttons -->

    <TextView
        android:id="@+id/gameOverText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over"
        android:textSize="48sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dp"
        android:textStyle="bold"
        android:fontFamily="@font/press_start_2p"
        android:layout_centerInParent="true"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameOverText"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <!-- ImageView f端r R端ckkehr zum Spiel -->
        <ImageView
            android:id="@+id/restartButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/videospielkonsole"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="20dp" />

        <!-- ImageView f端r eine andere Activity -->
        <ImageView
            android:id="@+id/tamagotchiButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tamagotchi_neu"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</RelativeLayout>
