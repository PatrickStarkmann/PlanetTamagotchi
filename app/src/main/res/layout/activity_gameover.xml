<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Hintergrundbild -->
    <ImageView
        android:id="@+id/hintergrund"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pregame"
        android:scaleType="centerCrop" />



    <!-- Game Over Text -->

    <!-- LinearLayout f端r die Buttons -->

    <!-- zeigt die gewonnen Bonus Sterne -->

    <TextView
        android:id="@+id/SternCounterGameOver"
        android:layout_width="97dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="314dp"
        android:text="0"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/gameOverText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="171dp"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center"
        android:text="Game Over"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameOverText"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <!-- ImageView f端r R端ckkehr zum Spiel -->
        <ImageView
            android:id="@+id/restartButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/videospielkonsole"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="20dp" />

        <!-- ImageView f端r eine andere Activity -->
        <ImageView
            android:id="@+id/tamagotchiButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tamagotchi_neu"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</RelativeLayout>
