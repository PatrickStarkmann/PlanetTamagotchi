<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zaehler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/hintergrund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hintergrund_final" />




    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/tamagotchi"
        android:layout_width="516dp"
        android:layout_height="490dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="329dp"
        android:layout_marginEnd="140dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tamagotchi_neu" />

    <com.example.planettamagotchi.DraggableImageView
        android:id="@+id/TeeMain"
        android:layout_width="39dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="365dp"
        app:srcCompat="@drawable/tee" />

    <com.example.planettamagotchi.DraggableImageView
        android:id="@+id/ColaMain"
        android:layout_width="39dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="410dp"
        app:srcCompat="@drawable/cola" />

    <ImageView
        android:id="@+id/minigame"
        android:layout_width="96dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="353dp"
        android:layout_marginBottom="113dp"
        app:srcCompat="@drawable/videospielkonsole" />

    <ImageView
        android:id="@+id/shop"
        android:layout_width="68dp"
        android:layout_height="69dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="612dp"
        android:layout_marginBottom="97dp"
        app:srcCompat="@drawable/shop" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="100dp"
        />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progressbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="100dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="120dp"
        android:layout_width="49dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/erwarmung" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="60dp"
        android:layout_width="49dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/leben" />

    <TextView
        android:id="@+id/SternCounter"
        android:layout_width="97dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="-36dp"
        android:text="0"
        android:textSize="40sp" />

    <com.example.planettamagotchi.DraggableImageView
        android:id="@+id/foehn"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="88dp"
        app:srcCompat="@drawable/haartrockner" />


    <ImageView
        android:id="@+id/RadioMain"
        android:layout_width="39dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="283dp"
        app:srcCompat="@drawable/radio" />

    <com.example.planettamagotchi.DraggableImageView
        android:id="@+id/Wiederbelebung"
        android:layout_width="39dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="324dp"
        app:srcCompat="@drawable/engel" />




</RelativeLayout>