<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zaehler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/hintergrund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hintergrund_neu" />


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/tamagotchi"
        android:layout_width="508dp"
        android:layout_height="496dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="152dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tamagotchi_neu" />

    <ImageView
        android:id="@+id/stern"
        android:layout_width="140dp"
        android:layout_height="135dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="52dp"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/minigame"
        android:layout_width="160dp"
        android:layout_height="163dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="28dp"
        app:srcCompat="@drawable/videospielkonsole" />

    <ImageView
        android:id="@+id/shop"
        android:layout_width="160dp"
        android:layout_height="156dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="39dp"
        app:srcCompat="@drawable/shop" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="100dp"
        />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progressbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="100dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="120dp"
        android:layout_width="49dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/erwarmung" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="60dp"
        android:layout_width="49dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/leben" />


</RelativeLayout>